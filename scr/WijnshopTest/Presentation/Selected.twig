                           <!-- <option name="" value="Doos4">Doos voor 4 flessen</option>
                            <option name="" value="Doos6">Doos voor 6 flessen</option>
                            <option name="" value="Kist2">Kist voor 2 flessen</option>
                            <option name="" value="Kist4">Kist voor 4 flessen</option>
                            <option name="" value="Kist6">Kist voor 6 flessen</option> 
                        </select>   
                    </div>--> 
                    <div class="input">
                        <input type="submit"  name="submit" value="Voeg toe aan winkelwagentje">
                    </div> 
                </form>
                </li>   
                </div>
                <div id="winkelmandje">
            <h4>Uw winkelmandje:::::::::::::::::</h4>
            <!--{%for keuze in winkelmandje%}-->
                <div class="itembasket">
                    <p>{{wijn.naam}}: {{wijn.prijs}}&euro; <a href="selected.php?action=verwijdart&id={{wijn.getIdWijn}}"><img class="delete" src="images/delete.jpg"/></a></p>
                </div>
            <!--{%endfor%}-->
            <hr>
            <p>Totaalprijs: <span id="basketotaal">{{totaalprijs}}&euro;</span></p>
            <hr>
            <div id="afrekenen">
                <a class="" href="selected.php?action=afrekenen">Afrekenen</a>
                
            </div>
        </div>
                     
                {%endfor%}
                </ul>
                
                </section>
            </section>       
        </div>     

